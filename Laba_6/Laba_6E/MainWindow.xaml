<Window x:Class="Laba_6E.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_6E"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="read"
                Content="Чтение"
                Click="Read_Click"
                Margin="10,10,0,5"/>
        <Button Name="write"
                Grid.Row="1"
                Content="Запись"
                Click="Write_Click"
                Margin="10,5,0,10"/>
        <RichTextBox Name="rtb"
                     Grid.Column="1"
                     Grid.RowSpan="2"
                     Margin="10"/>
    </Grid>
</Window>
